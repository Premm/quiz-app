<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ChoiceButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="SelectedAnswerButton" parent="ChoiceButton">
        <item name="android:backgroundTint">@color/purple_500</item>
    </style>
    <style name="CorrectAnswerButton" parent="ChoiceButton">
        <item name="android:backgroundTint">@color/success</item>
    </style>
    <style name="WrongAnswerButton" parent="ChoiceButton">
        <item name="android:backgroundTint">@color/danger</item>
    </style>
</resources>
